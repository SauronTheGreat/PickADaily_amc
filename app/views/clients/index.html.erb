<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing clients</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Return focus</th>

    <th>Risk focus</th>

    <th>Tolerance</th>

    <th>Outlook</th>

    <th>Diversification intent</th>

    <th>Proportion invested</th>

    <th>Wealth growth rate</th>

    <th>Fee sensitivity</th>

    <th>Profit sharing sensitivity</th>

    <th></th>
  </tr>

<% @clients.each do |client| %>
  <tr>

    <td><%= client.return_focus %></td>

    <td><%= client.risk_focus %></td>

    <td><%= client.tolerance %></td>

    <td><%= client.outlook %></td>

    <td><%= client.diversification_intent %></td>

    <td><%= client.proportion_invested %></td>

    <td><%= client.wealth_growth_rate %></td>

    <td><%= client.fee_sensitivity %></td>

    <td><%= client.profit_sharing_sensitivity %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), client, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_client_path(client), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), client, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_client_path, :title=>"Add a client" %>
<% end %>
<%= content_for :footer do %>
<% end %>

