<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing player_transactions</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Player</th>

    <th>Investment type</th>

    <th>Investment round price</th>

    <th>Amount invested</th>

    <th>Date transacted</th>

    <th>Expected date of return</th>

    <th></th>
  </tr>

<% @player_transactions.each do |player_transaction| %>
  <tr>

    <td><%= player_transaction.player_id %></td>

    <td><%= player_transaction.investment_type_id %></td>

    <td><%= player_transaction.investment_round_price_id %></td>

    <td><%= player_transaction.amount_invested %></td>

    <td><%= player_transaction.date_transacted %></td>

    <td><%= player_transaction.expected_date_of_return %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), player_transaction, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_player_transaction_path(player_transaction), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), player_transaction, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_player_transaction_path, :title=>"Add a player_transaction" %>
<% end %>
<%= content_for :footer do %>
<% end %>

