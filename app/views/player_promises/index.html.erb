<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing player_promises</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Player</th>

    <th>Expected return</th>

    <th>Max risk</th>

    <th>Round</th>

    <th>Portfolio wealth approach</th>

    <th></th>
  </tr>

<% @player_promises.each do |player_promise| %>
  <tr>

    <td><%= player_promise.player_id %></td>

    <td><%= player_promise.expected_return %></td>

    <td><%= player_promise.max_risk %></td>

    <td><%= player_promise.round_id %></td>

    <td><%= player_promise.portfolio_management %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), player_promise_path(player_promise,:player_id=>@player.id), :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_player_promise_path(player_promise,:player_id=>@player.id), :title=>'Edit' %>

    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
    <% if @player_promises.count==0 %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_player_promise_path(:player_id=>@player.id), :title=>"Add a player_promise" %>
        <% end %>
<% end %>
<%= content_for :footer do %>
<% end %>

