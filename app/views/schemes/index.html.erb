<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing schemes</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Name</th>

    <th>Entry load</th>

    <th>Exit load</th>

    <th>Commission paid</th>

    <th></th>
  </tr>

<% @schemes.each do |scheme| %>
  <tr>

    <td><%= scheme.name %></td>

    <td><%= scheme.entry_load %></td>

    <td><%= scheme.exit_load %></td>

    <td><%= scheme.commission_paid %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), scheme, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_scheme_path(scheme), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), scheme, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_scheme_path, :title=>"Add a scheme" %>
<% end %>
<%= content_for :footer do %>
<% end %>

