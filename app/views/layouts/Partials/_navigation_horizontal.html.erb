<!-- This is the Admin Control which only the Admin should get to see -->

<%# if current_user.admin  %>

<% if @current_page_layout %>
    <%= link_to image_tag(icon("home"), :size=>"100x100"), '/', :title=> "Home" %>
    <%= link_to image_tag(icon("layout"), :size=>"100x100"), edit_page_layout_path(@current_page_layout, :page_id=>@current_page.id, :path=>request.fullpath), :title=> "Select layout for this controller-action combination" %>
    <%= link_to image_tag(icon("theme"), :size=>"100x100"), edit_color_theme_path(ColorTheme.first), :title=> "Select a color theme" %>
    <%= link_to image_tag(icon("search"), :size=>"100x100"), plugin_samples_path, :title=> "Built-in JQuery Plugins " %>
<% else %>
    <% if params[:controller] == "page_layouts" %>
    <% else %>
        <%= link_to image_tag(icon("home"), :size=>"100x100"), '/', :title=> "Home" %>
        <%= link_to image_tag(icon("layout"), :size=>"100x100"), new_page_layout_path(:controller_name=>params[:controller].parameterize, :action_name=>params[:action].parameterize, :path=>request.fullpath), :title=> "Select layout for this controller-action combination" %>
        <%= link_to image_tag(icon("theme"), :size=>"100x100"), edit_color_theme_path(ColorTheme.first), :title=> "Select a color theme" %>
        <%= link_to image_tag(icon("search"), :size=>"100x100"), plugin_samples_path, :title=> "Built-in JQuery Plugins " %>
    <% end %>
<% end %>

<%# end  %>

<!-- End of Admin Control Panel -->

