<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing company_financials</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Company</th>

    <th>Financial year</th>

    <th>Book value</th>

    <th>Ev ebitda</th>

    <th>Gearing</th>

    <th>Turnover</th>

    <th>Profit</th>

    <th>Total debt</th>

    <th>Debt rating</th>

    <th>Promoter rating</th>

    <th></th>
  </tr>

<% @company_financials.each do |company_financial| %>
  <tr>

    <td><%= company_financial.company_id %></td>

    <td><%= company_financial.financial_year %></td>

    <td><%= company_financial.book_value %></td>

    <td><%= company_financial.ev_ebitda %></td>

    <td><%= company_financial.gearing %></td>

    <td><%= company_financial.turnover %></td>

    <td><%= company_financial.profit %></td>

    <td><%= company_financial.total_debt %></td>

    <td><%= company_financial.debt_rating %></td>

    <td><%= company_financial.promoter_rating %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), company_financial, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_company_financial_path(company_financial), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), company_financial, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_company_financial_path, :title=>"Add a company_financial" %>
<% end %>
<%= content_for :footer do %>
<% end %>

