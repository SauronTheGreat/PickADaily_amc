<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing news</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Description</th>

    <th>Impact on economic growth</th>

    <th>Impact on equity</th>

    <th>Impact on sector</th>

    <th>Impact on company</th>

    <th>Impact on gold</th>

    <th>Impact on debt</th>

    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>

    <td><%= news.description %></td>

    <td><%= news.impact_on_economic_growth %></td>

    <td><%= news.impact_on_equity %></td>

    <td><%= news.impact_on_sector %></td>

    <td><%= news.impact_on_company %></td>

    <td><%= news.impact_on_gold %></td>

    <td><%= news.impact_on_debt %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), news, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_news_path(news), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), news, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_news_path, :title=>"Add a news" %>
<% end %>
<%= content_for :footer do %>
<% end %>

