<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing round_news</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Round</th>

    <th>News</th>

    <th>News date</th>

    <th></th>
  </tr>

<% @round_news.each do |round_news| %>
  <tr>

    <td><%= round_news.round_id %></td>

    <td><%= round_news.news_id %></td>

    <td><%= round_news.news_date %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), round_news, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_round_news_path(round_news), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), round_news, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_round_news_path, :title=>"Add a round_news" %>
<% end %>
<%= content_for :footer do %>
<% end %>

