<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing companies</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Name</th>

    <th>Sector</th>

    <th></th>
  </tr>

<% @companies.each do |company| %>
  <tr>

    <td><%= company.name %></td>

    <td><%= company.sector_id %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), company, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_company_path(company), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), company, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_company_path, :title=>"Add a company" %>
<% end %>
<%= content_for :footer do %>
<% end %>

