<%= content_for :head do %>
<script type="text/javascript">
    $(function() {
    });
</script>
<% end %>

<%= content_for :header do %>
<h1>Listing simulations</h1>
<% end %>

<%= content_for :main_content do %>
<table>
  <tr>

    <th>Name</th>

    <th>Student group</th>

    <th></th>
  </tr>

<% @simulations.each do |simulation| %>
  <tr>

    <td><%= simulation.name %></td>

    <td><%= simulation.student_group_id %></td>

    <td>
    <%= link_to image_tag(icon("show"),:size=>"64x64"), simulation, :title=>'Show' %>
    <%= link_to image_tag(icon("edit"),:size=>"64x64"), edit_simulation_path(simulation), :title=>'Edit' %>
    <%= link_to image_tag(icon("delete"),:size=>"64x64"), simulation, confirm: 'Are you sure?', method: :delete, :title=>'Delete' %>
    </td>
  </tr>
<% end %>
</table>
<% end %>

<br />
<%= content_for :navigation do %>
<% end %>
<%= content_for :extra do %>
<%= link_to image_tag('new_icon.png',:size=>"100x100"), new_simulation_path, :title=>"Add a simulation" %>
<% end %>
<%= content_for :footer do %>
<% end %>

